# =============================================================================
# Environment Variables for Kong Microservices Demo
# =============================================================================
# Copy this file to .env and update the values for production use

# JWT Configuration
# IMPORTANT: Change this secret in production!
# Must match the secret in kong/kong.yml consumers section
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=604800

# Flask Configuration
FLASK_ENV=production

# Logging
LOG_LEVEL=INFO

# =============================================================================
# PostgreSQL Configuration (for DB mode only)
# =============================================================================
# Used by docker-compose.db.swarm.yml
KONG_PG_USER=kong
KONG_PG_PASSWORD=kongpassword
KONG_PG_DATABASE=kong
